/*-----------------------------------------------------------------------------------------------------*/
/*------------------------------- FUNCTIONS/RANDOM SWITCHES/SWITCHES ----------------------------------*/
/*-----------------------------------------------------------------------------------------------------*/

/* Switch defining what town types this house type can be built in */
/* --------------------------------------------------------------------------------------------------- */

switch (FEAT_HOUSES, SELF, farm_house_town_type, func_town_type()) {
		1: 1; 2: 0; 3: 0;
}


/* Random switches for the sets of spritelayouts for each era */
/* --------------------------------------------------------------------------------------------------- */

random_switch (FEAT_HOUSES, SELF, random_farm_house_era01) {
		1: spritelayout_farm_house_era01_001;
		1: spritelayout_farm_house_era01_002;
		1: spritelayout_farm_house_era01_003;
		1: spritelayout_farm_house_era01_004;
		1: spritelayout_farm_house_era01_005;
		1: spritelayout_farm_house_era01_006;
}

random_switch (FEAT_HOUSES, SELF, random_farm_house_era02) {
		1: spritelayout_farm_house_era02_001;
		1: spritelayout_farm_house_era02_002;
		1: spritelayout_farm_house_era02_003;
		1: spritelayout_farm_house_era02_004;
		1: spritelayout_farm_house_era02_005;
		1: spritelayout_farm_house_era02_006;
}


/* Switch for binding the sets of spritelayouts to the historical eras */
/* --------------------------------------------------------------------------------------------------- */

// This switch is called by the 'default' callback and binds the sets of spritelayouts to an animation frame
switch (FEAT_HOUSES, SELF, era_switch_farm_house, animation_frame) {
		1: random_farm_house_era01;
		random_farm_house_era02;
}

// This switch is called by the 'anim_control' callback and used for deciding which frame to use
switch (FEAT_HOUSES, SELF, era_anim_farm_house, animation_frame) {
	0:  func_anim_frame;
	CB_RESULT_DO_NOTHING;
}



/*-----------------------------------------------------------------------------------------------------*/
/*--------------------------------------- ITEM DEFINITIONS --------------------------------------------*/
/*-----------------------------------------------------------------------------------------------------*/

item (FEAT_HOUSES, item_farm_house, 1, HOUSE_SIZE_1X1) {
	property {
		substitute:					25;
		name:						string(STR_FARMHOUSE);
		population:					14;
		mail_multiplier:			7;
		accepted_cargos:			[[PASS, 3], [MAIL, 1], [GOOD, 0]];
		local_authority_impact:		75;
		probability:				1;
		years_available:			[1700, 1979];
		minimum_lifetime:			5;
		availability_mask:			[bitmask(TOWNZONE_OUTER_SUBURB, TOWNZONE_INNER_SUBURB, TOWNZONE_CENTRE), ALL_CLIMATES];
		removal_cost_multiplier:	75;
		building_class:				1;
		animation_info:				[ANIMATION_NON_LOOPING, 1];
	}
	graphics {
		default:					era_switch_farm_house;
		anim_control:				era_anim_farm_house;
		construction_check:			farm_house_town_type;
	}
}



