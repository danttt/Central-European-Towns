// Return a number for each historical era
switch (FEAT_HOUSES, SELF, availability_years, current_year) {
		0    .. 1849: return 0;
        1850 .. 1919: return 1;
		1920 .. 1949: return 2;
		1950 .. 1979: return 3;
		1980 .. 2009: return 4;
		return 5;
}

